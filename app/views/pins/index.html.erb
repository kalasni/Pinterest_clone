<div class="panel panel-default">
  <div class="panel-heading"><h2>Listing Pins</h2></div>
  <div class="panel-body">

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <!--<td><%#= image_tag pin.image.url(:medium) %> </td>  -->
        <td><%= filepicker_image_tag pin.filepicker_url, w: 200, h: 200, fit: 'clip' %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin , class: 'btn btn-default'%></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin) , class: 'btn btn-default'%></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' },
                            class: 'btn btn-warning' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path,  class: 'btn btn-primary'%>

 </div>
</div>
